@model clinicadental.Models.Avancetratamiento

@{
    ViewData["Title"] = "Edit";
    Layout = "";
}

<form id="editAvanceForm" asp-action="Edit">
    <div class="d-flex flex-column">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="IdAvanceTratamiento" type="hidden" />
            <input asp-for="IdTratamiento" id="IdTratamiento" type="hidden"/>
            <div class="form-group col-6">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input type="date" asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="FechaConclusion" class="control-label"></label>
                <input type="date" asp-for="FechaConclusion" class="form-control" />
                <span asp-validation-for="FechaConclusion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PiezaDental" class="control-label"></label>
                <select name="piezaDentalIdEdit" class="form-control form-select" asp-items="ViewBag.PiezaDentalEdit"></select>
                <span asp-validation-for="PiezaDental" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Avance" class="control-label"></label>
                <input type="text" asp-for="Avance" class="form-control" />
                <span asp-validation-for="Avance" class="text-danger"></span>
                <hr class="mt-3" />
            </div>   
            <div class="form-group">
                <div class="d-flex flex-column">
                    <div class="row justify-content-end">
                        <div class="col-auto">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                        <div class="col-auto">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

