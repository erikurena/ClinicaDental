@model IEnumerable<clinicadental.Models.Avancetratamiento>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaConclusion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PiezaDental)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTratamientoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaConclusion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PiezaDental)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTratamientoNavigation.IdTratamiento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAvanceTratamiento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdAvanceTratamiento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAvanceTratamiento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
