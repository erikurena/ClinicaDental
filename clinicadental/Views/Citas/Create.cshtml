@model clinicadental.Models.Cita

@{
    ViewData["Title"] = "Create";
    Layout = "";
}

<form asp-action="Create" id="createCitaForm" method="post">
<div class="d-flex flex-column">
    <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>      
            <div class="mb-3">
                <label class="form-label">Fecha y Hora Seleccionada</label>
                <input type="text" class="form-control" id="displayDateTime" disabled />
            </div>
            <!-- Campos ocultos para enviar los valores al servidor -->
            <input type="hidden"  asp-for="FechaHoraCita" id="FechaHoraCita" />
            <input type="hidden" asp-for="HorainicioCita" id="HorainicioCita" />
            <input type="hidden" asp-for="HorafinCita" id="HorafinCita" />
            <div class="form-group">
                <label asp-for="NombrePaciente" class="control-label"></label>
                <input asp-for="NombrePaciente" class="form-control" />
                <span asp-validation-for="NombrePaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MotivoCita" class="control-label"></label>
                <input asp-for="MotivoCita" class="form-control" />
                <span asp-validation-for="MotivoCita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoCita" class="control-label"></label>
                <input asp-for="EstadoCita" class="form-control" />
                <span asp-validation-for="EstadoCita" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="CorreoElectronico" class="control-label"></label>
                <input asp-for="CorreoElectronico" class="form-control" />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>            
          
    </div>
</div>
</form>

