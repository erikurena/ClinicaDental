@model clinicadental.Models.Enfermerdad

@{
    ViewData["Title"] = "Create";
    Layout = "";
}
<div class="d-flex flex-column">
    <div class="row">
        <div class="form-group">
            <label class="control-label">Enfermedades</label>
        </div>
        <div class="form-group d-flex flex-wrap">
            @foreach (var enfermedad in ViewBag.IdEnfermedad)
            {
                <div class="form-group form-check col-6 col-sm-6 col-md-4 col-lg-3">
                    <input type="checkbox" name="enfermedadSeleccionada" value="@enfermedad.Value" class="form-check-input" />
                    <label class="form-check-label">@enfermedad.Text</label>
                </div>
            }
        </div>
    </div>
</div>




