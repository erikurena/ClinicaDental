@model clinicadental.Models.Usuario

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ELIMINAR</h1>
<h3>Estas seguro de Eliminar al Usuario?</h3>

<div class="fondo-historial">
    <div class="card-header cabecera-card">
        <h4>Usuario</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrimerNombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrimerNombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SegundoNombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SegundoNombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ApellidoPaterno)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApellidoPaterno)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ApellidoMaterno)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ApellidoMaterno)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Celular)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Celular)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaNacimiento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Especialidad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Especialidad)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Sexo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sexo)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdUsuario" />
            <input type="submit" value="Eliminar" class="btn btn-outline-danger fondo-historial" /> |
            <a asp-action="Index" class="btn btn-outline-secondary fondo-historial"> <i class="bi bi-box-arrow-left"></i> Volver</a>
        </form>
    </div>
    
</div>


